<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="letseat.mealdesigner.shoppinglist.ShoppingList">



    <include layout="@layout/app_bar_main"
        android:id="@+id/include" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveEditedShoppingList"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="removeIngredient"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/removeButton"
            android:layout_gravity="right|bottom" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:onClick="addEditedShoppingList"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/addButton"
            android:layout_gravity="left|bottom" />

        <TableLayout
            android:id="@+id/shoplist_edit_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom">

        </TableLayout>
    </FrameLayout>


</RelativeLayout>
